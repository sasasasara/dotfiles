{
  "suggest.noselect": false,
  "coc.preferences.formatOnSaveFiletypes": [
    "javascript",
    "typescript",
    "json",
    "javascriptreact",
    "typescript.tsx",
    "graphql"
  ],
  "languageserver": {
    "bash": {
      "command": "bash-language-server",
      "args": ["start"],
      "filetypes": ["sh", "bash", "bin", "s"],
      "ignoredRootPaths": ["~"]
    }
  }
}
